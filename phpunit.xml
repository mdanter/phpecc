<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php" colors="true"
	convertErrorsToExceptions="true" convertNoticesToExceptions="true"
	convertWarningsToExceptions="true" processIsolation="false"
	stopOnFailure="false">
	<testsuites>
		<testsuite name="All">
			<directory suffix="Test.php">./tests/</directory>
		</testsuite>
	</testsuites>
	<logging>
		<log type="coverage-html" target="./tests/output/Coverage/"
			charset="UTF-8" yui="true" highlight="true" />
		<!--<log type="coverage-clover" target="./Results/Coverage.xml"/> -->
		<log type="junit" target="./tests/output/Results/Results.xml"
			logIncompleteSkipped="true" />
	</logging>
	<filter>
		<blacklist>
			<exclude>
				<directory suffix=".php">./vendor</directory>
			</exclude>
		</blacklist>
		<whitelist processUncoveredFilesFromWhitelist="true">
			<directory suffix=".php">./app</directory>
			<exclude>
				<directory suffix=".php">./vendor</directory>
			</exclude>
		</whitelist>
	</filter>
	<php>
		<const name="PHPUNIT_HASH_PASS_COUNT" value="0" />
		<const name="AUTH_LOAD_PSRLOG" value="true" />
	</php>
</phpunit>
